<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.packlest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".PacklestApplication">
        <activity
            android:name=".CreateItemActivity"
            android:label="@string/title_activity_create_item"
            android:parentActivityName=".PacklestActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.packlest.PacklestActivity" />
        </activity>
        <activity
            android:name=".CreateTripParameterActivity"
            android:label="@string/title_activity_create_trip_parameter"
            android:parentActivityName=".PacklestActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.packlest.PacklestActivity" />
        </activity>
        <activity
            android:name=".PackingListActivity"
            android:label="@string/title_activity_packing_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreatePackingListActivity"
            android:label="@string/title_activity_create_packing_list"
            android:parentActivityName=".PacklestActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PacklestActivity" />
        </activity>
        <activity
            android:name=".Listview"
            android:label="@string/title_activity_listview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PacklestActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>